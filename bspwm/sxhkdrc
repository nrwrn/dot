super + c
	pkill -USR1 -x sxhkd

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east} --follow

alt + {_,shift + } Tab
	bspc node -f {next,prev}.leaf.window.local

super + {f, s}
	bspc node -t {'~fullscreen', '~floating'}

super + m
	bspc desktop -l next

super + d
	rofi -show drun

super + shift + d
	rofi -show run

super + s
	rofi -show ssh

super + Return
	alacritty

super + shift + {e,r}
	bspc {quit,wm -r}

super + shift + s
	systemctl suspend

super + q
	bspc node -c

# Smart resize
super + ctrl + {h,j,k,l}
	n=20; \
	{ d1=left;   d2=right;  dx=-$n; dy=0; \
	, d1=bottom; d2=top;    dx=0;   dy=$n;  \
	, d1=top;    d2=bottom; dx=0;   dy=-$n; \
	, d1=right;  d2=left;   dx=$n;  dy=0;   \
	} \
	bspc node -z $d1 $dx $dy || bspc node -z $d2 $dx $dy

XF86AudioLowerVolume
	~/bin/dunst-volume down

XF86AudioRaiseVolume
	~/bin/dunst-volume up

XF86AudioMute
	~/bin/dunst-volume mute

XF86MonBrightnessDown
	~/bin/dunst-brightness down

XF86MonBrightnessUp
	~/bin/dunst-brightness up

Print
	mkdir -p ~/Pictures/scrot && \
	scrot ~/Pictures/scrot/$(uname -n).png && \
	notify-send "took scrot"

